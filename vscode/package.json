{
  "name": "@egon/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.6.0",
  "workspaces": [
    "apps/vscode/*",
    "libs/*",
    "libs/vscode/*"
  ],
  "scripts": {
    "build": "npm-run-all -s build:libs -p build:webview build:plugin",
    "build:libs": "npm-run-all -p build:lib:diagram-js build:lib:domain-story build:lib:dtos",
    "build:lib:diagram-js": "yarn workspace @egon/diagram-js-egon-plugin build",
    "build:lib:domain-story": "yarn workspace @egon/vscode-domain-story build",
    "build:lib:dtos": "yarn workspace @egon/vscode-data-transfer-objects build",
    "build:webview": "yarn workspace egon-modeler-webview build",
    "build:plugin": "yarn workspace egon-modeler-plugin build",
    "dev": "npm-run-all -s build:lib:diagram-js -p dev:libs dev:webview dev:plugin",
    "dev:libs": "npm-run-all -p dev:lib:diagram-js dev:lib:domain-story dev:lib:dtos",
    "dev:lib:diagram-js": "yarn workspace @egon/diagram-js-egon-plugin dev",
    "dev:lib:domain-story": "yarn workspace @egon/vscode-domain-story dev",
    "dev:lib:dtos": "yarn workspace @egon/vscode-data-transfer-objects dev",
    "dev:webview": "yarn workspace egon-modeler-webview dev",
    "dev:plugin": "yarn workspace egon-modeler-plugin dev",
    "serve": "npm-run-all -s dev:lib:diagram-js -p \"dev:lib:diagram-js -- --watch\" serve:webview",
    "serve:webview": "yarn workspace egon-modeler-webview serve",
    "test": "jest --coverage --coverageReporters=clover",
    "lint": "eslint ."
  },
  "dependencies": {
    "bpmn-font": "^0.12.1",
    "diagram-js": "^15.2.4",
    "diagram-js-direct-editing": "^3.2.0",
    "diagram-js-minimap": "^5.2.0",
    "didi": "^10.2.2",
    "dot": "^1.1.3",
    "ids": "^1.0.5",
    "inherits-browser": "^0.1.0",
    "lodash": "^4.17.21",
    "min-dash": "^4.2.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.0",
    "tiny-svg": "^4.1.3",
    "tslib": "^2.3.1",
    "tsyringe": "^4.8.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/jasmine": "^5.1.4",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.8.6",
    "@types/vscode": "^1.98.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/utils": "^8.19.0",
    "@vitest/ui": "^1.3.1",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "jasmine-core": "^5.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsdom": "~22.1.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.1.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.1",
    "sass": "^1.93.3",
    "ts-archlint": "^0.15.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "~3.8.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.3.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1",
    "zip-build": "^1.8.0"
  }
}
